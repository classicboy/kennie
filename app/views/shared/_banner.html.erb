<!--BANNER START-->
<%= audio_tag "When The Love Falls - Yiruma.mp3", id: "sound", class: "audio-to-play", autoplay: true %>

<div class="kode-inner-banner">
  <div class="banner-overlay"></div>
  <div class="kode-page-heading">
  </div>
</div>

<div class="container">
  <div class="banner-search">
    <div class="row">
      <div class="col-md-2">
        <h2>Search Products</h2>
      </div>

      <%= form_tag search_product_path do %>
          <div class="col-md-8">
            <%= text_field_tag :query, params[:query], class: "form-control", id: "product_search", autocomplete: "off", placeholder: 'Search' %>
            <!--<input type="text" placeholder="Enter Your Title" name="query" id="book_search">-->
          </div>
          <div class="col-md-2">
            <%= submit_tag 'Search' %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<!--BANNER END-->
<script type="text/javascript" charset="utf-8">
  $("#product_search").typeahead({
    name: "product",
    hint: null,
    highlight: null,
    limit: 10,
    remote: "/products/auto_complete?query=%QUERY"
  });
</script>

<style>
  .tt-hint {
    display: none;
  }

  .twitter-typeahead {
    width: 100%;
  }

  #book_search {
    background-color: #fff !important;
    width: 100%;
    color: #2b2b2b;
    border-radius: 0px;
  }

  .tt-dropdown-menu {
    background-color: #ffffff;
    padding: 15px;
    border-bottom: 0 none;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.46);
    width: 100%;
  }

  .tt-suggestion p {
    padding: 8px 0px;
    margin-bottom: 2px;
    /*border-bottom: 1px solid #333333;*/
  }
</style>